kubeconfig_path    = null
kubeconfig_context = null

cockroachdb_enabled      = true
cockroachdb_cluster_name = "cockroachdb"
cockroachdb_namespace    = "cockroachdb"
cockroachdb_node_count   = 3
cockroachdb_storage_size = "10Gi"
cockroachdb_storage_class = ""

redis_enabled      = true
redis_cluster_name = "redis"
redis_namespace    = "redis"
redis_replicas     = 3
redis_storage_size = "1Gi"
redis_storage_class = ""
redis_password     = null

prometheus_enabled      = true
prometheus_namespace    = "monitoring"
prometheus_storage_size = "5Gi"
prometheus_storage_class = ""

# Loki Configuration
# Loki receives logs from Promtail and stores them
# Grafana queries logs from Loki via datasource configuration
loki_enabled      = true
loki_namespace    = "monitoring"
loki_storage_size = "1Gi"
loki_storage_class = ""
# Optional: Custom config file path (defaults to config/monitoring/loki/loki.yaml)
loki_config_file_path = null

# Promtail Configuration
# Promtail scrapes logs from pods with label app.kubernetes.io/part-of=kgym
# and sends them to Loki at http://loki.monitoring.svc.cluster.local:3100
promtail_enabled      = true
promtail_namespace    = "monitoring"
# Optional: Custom config file path (defaults to config/monitoring/promtail/promtail.yaml)
promtail_config_file_path = null

# Grafana Configuration
# Grafana visualizes logs from Loki and metrics from Prometheus
# Datasources are automatically configured via Terraform module
grafana_enabled         = true
grafana_namespace       = "monitoring"
grafana_admin_password  = null
grafana_storage_size    = "1Gi"
grafana_storage_class   = ""
# Optional: Custom config file path (defaults to config/monitoring/grafana/grafana.ini)
grafana_config_file_path = null

minio_enabled      = true
minio_cluster_name = "minio"
minio_namespace    = "minio"
minio_replicas     = 1
minio_storage_size  = "1Gi"
minio_storage_class = ""
minio_access_key   = "minioadmin"
minio_secret_key   = "minioadmin"

kafka_enabled       = false
kafka_namespace     = "kafka"
kafka_replicas      = 1
kafka_storage_size  = "10Gi"
kafka_storage_class = ""
# Kafka SASL authentication credentials
kafka_sasl_user     = "admin"
kafka_sasl_password = "admin-secret"

# Sentry Configuration
# Uses embedded PostgreSQL when sentry_postgresql_host is empty (managed by Sentry Helm chart)
# Note: If sentry_*_host variables are left empty (""), Sentry will automatically
# connect to the corresponding service if it's enabled:
# - sentry_postgresql_host = "" → uses embedded PostgreSQL from Sentry Helm chart
# - sentry_redis_host = "" → uses Redis if redis_enabled = true
# - sentry_kafka_host = "" → uses Kafka if kafka_enabled = true
# To use external services (e.g., CockroachDB), set the host variables explicitly.
sentry_enabled         = false
sentry_namespace       = "sentry"
sentry_user_email      = "admin@sentry.local"
sentry_user_password   = "sentry"
# Leave empty to use embedded PostgreSQL from Sentry Helm chart, or set to external PostgreSQL/CockroachDB host
sentry_postgresql_host = ""
sentry_postgresql_port = 5432
sentry_postgresql_database = "sentry"
sentry_postgresql_user = "postgres"
sentry_postgresql_password = ""
# Leave empty to auto-connect to Redis, or set to external Redis host
sentry_redis_host      = ""
sentry_redis_port      = 6379
sentry_redis_password  = null
# Leave empty to auto-connect to Kafka, or set to external Kafka host
sentry_kafka_host      = ""
sentry_kafka_port      = 9092
sentry_storage_size     = "10Gi"
sentry_storage_class    = ""
